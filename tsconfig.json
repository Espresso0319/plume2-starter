{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": false,
        "experimentalDecorators": true,
        "jsx": "react",
        "baseUrl": ".",
        "rootDirs": [
            "./apps",
            "./web_modules"
        ],
        "outDir": "build",
        "importHelpers": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "paths": {
            "qmkit": [
                "./web_modules/qmkit"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}